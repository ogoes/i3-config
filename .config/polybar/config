[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #111
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #80cbc4
secondary = #e60053
alert = #bd2c40

[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 26
radius = 2
fixed-center = true

border-bottom-size  = -1
border-top-size     = 5

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #fff

border-size = 5
border-color = #fff#00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=7;1
font-1 = "FontAwesome:pixelsize=10;1"
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0
font-3 = "Wuncon Siji:pixelsize=10;1"
;font-3 = FontAwesome:size=7

modules-left = bspwm i3 
modules-center = xwindow
modules-right = spotify xbacklight alsa cpu memory wlan eth battery date powermenu

# tray-position = left
# tray-padding = 3
;tray-transparent = true
;tray-background = ${colors.background}


;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
